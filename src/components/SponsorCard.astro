---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   logo: string;
   name: string;
   url: string;
}

const { logo, name, url } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/img/logos/sponsor/2026/*.{jpeg,jpg,png,gif,svg}');
if (!images[logo]) throw new Error(`"${logo}" does not exist in glob: "src/assets/img/*.{jpeg,jpg,png,gif}"`);
const logoImage = (await images[logo]()).default;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="sponsor-card">
    <Image src={logoImage} alt={name} />
</a>
