<style>
	.container-md {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.about-section {
		animation: slideIn 0.5s ease-out;
		padding: 2rem 0;
	}

	.about-section h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: #e8e8e8;
	}

	.about-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.content-card {
		background-color: #2d2d2d;
		border: 1px solid #404040;
		border-radius: 12px;
		padding: 2rem;
		transition: all 0.3s ease;
	}

	.content-card:hover {
		border-color: #268FBF;
		box-shadow: 0 10px 30px rgba(38, 143, 191, 0.15);
	}

	.content-card h2 {
		color: #268FBF;
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	.content-card p {
		color: #b0b0b0;
		font-size: 1rem;
		line-height: 1.7;
		margin-bottom: 1rem;
	}

	.content-card p:last-child {
		margin-bottom: 0;
	}

	.content-card ul {
		list-style: none;
		padding: 0;
		margin: 1rem 0 0;
	}

	.content-card li {
		color: #b0b0b0;
		padding: 0.5rem 0 0.5rem 1.5rem;
		position: relative;
	}

	.content-card li:before {
		content: '→';
		position: absolute;
		left: 0;
		color: #268FBF;
		font-weight: bold;
	}

	.details-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
		margin-top: 1rem;
	}

	.detail-item {
		background-color: #3a3a3a;
		padding: 1rem;
		border-radius: 8px;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.detail-item .label {
		color: #268FBF;
		font-weight: 600;
		font-size: 0.9rem;
	}

	.detail-item .value {
		color: #e8e8e8;
		font-size: 1rem;
	}

	.involvement-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5rem;
		margin-top: 1rem;
	}

	.involvement-card {
		background-color: #3a3a3a;
		padding: 1.5rem;
		border-radius: 8px;
		border: 1px solid #404040;
		transition: all 0.3s ease;
	}

	.involvement-card:hover {
		border-color: #268FBF;
		background-color: #404040;
	}

	.involvement-card h3 {
		color: #268FBF;
		font-size: 1.1rem;
		margin-bottom: 0.75rem;
	}

	.involvement-card p {
		color: #b0b0b0;
		font-size: 0.95rem;
		margin: 0;
	}

	.involvement-card a {
		color: #268FBF;
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s;
	}

	.involvement-card a:hover {
		color: #00d4ff;
		text-decoration: underline;
	}

	.social-links {
		display: block;
		gap: 1rem;
		margin-top: 1rem;
		flex-wrap: wrap;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		background-color: #3a3a3a;
		border: 1px solid #404040;
		border-radius: 8px;
		color: #268FBF;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background-color: #268FBF;
		color: white;
		border-color: #268FBF;
		transform: translateY(-2px);
	}

	.social-link svg {
		width: 20px;
		height: 20px;
	}

	@media (max-width: 768px) {
		.about-section h1 {
			font-size: 1.8rem;
		}

		.details-grid,
		.involvement-grid {
			grid-template-columns: 1fr;
		}

		.content-card {
			padding: 1.5rem;
		}

		.social-links {
			flex-direction: column;
		}

		.social-link {
			width: 100%;
			justify-content: center;
		}
	}
</style>
