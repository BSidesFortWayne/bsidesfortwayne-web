---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Sponsors from '../components/Sponsors.astro';

---

<Layout title="BSides Fort Wayne 2026">
	<div class="content">
		<main>
			<Welcome />
		</main>
		<aside class="sponsors-column">
			<div id="sponsors" class="sponsors-content">
				<Sponsors />
			</div>
		</aside>
	</div>

	<style>
		.content {
			display: flex;
			flex-wrap: wrap;
			gap: 2rem;
		}
		main {
			flex: 1 1 100%;
			min-width: 0;
		}
		.sponsors-column {
			flex: 1 1 100%;
			min-width: 0;
		}
		.sponsors-content {
			display: block;
		}

		@media (min-width: 1024px) {
			.content {
				flex-wrap: nowrap;
			}
			main {
				flex: 3;
			}
			.sponsors-column {
				flex: 1;
				margin-left: 20px;
			}
		}

		@media (max-width: 768px) {
			.content {
				gap: 1rem;
			}
		}
	</style>
</Layout>

